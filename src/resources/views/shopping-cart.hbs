</head>
<body>
	<header id="header" id="home">
	<div class="container">
	  <div class="row align-items-center justify-content-between d-flex">
	     <div id="logo">
	      <a href="/"><img src="/img/logo.png" alt="" title="" /></a>
		  </div>
			<nav id="nav-menu-container">
				<ul class="nav-menu">
				  <li class="menu-active"><a href="/">Home</a></li>
                  <li>
					  <a href="/shopping-cart/">Shopping Cart <big><big><span class="badge bg-secondary">{{session.cart.totalQty}}</span></big></big></a>
				  </li>
				  
				</ul>
			</nav><!-- #nav-menu-container -->		    		
		</div>
	</div>
</header><!-- #header -->

	<section class="generic-banner relative">	
	<div class="container">
		<div class="row height align-items-center justify-content-center">
			<div class="col-lg-10">
				<div class="generic-banner-content">
					<h2 class="text-white">Our technology products</h2>
					<p class="text-white">It wonâ€™t be a bigger problem to find one device lover in your <br> neighbor. Since the introduction of E Commerce Shop.</p>
				</div>							
			</div>
		</div>
	</div>			
</section>		
<!-- End banner Area -->

{{!-- Shopping Cart --}}
<section class="service-area section-gap">
	<div class="container">

		{{#if products}}
		<div class="row">
			<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">

				{{#each products}}
				<ul class="list-group">
					<ul class="list-group-item">
						<span class="font-weight-bold"><bold>{{this.item.name}}</bold></span>
						<span class="badge bg-success">${{this.price}}</span>
				
						<div class="btn-group">
							<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								Action
							</button>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
								<li><a class="dropdown-item" href="/remove/{{this.item._id}}">Remove All</a></li>
							</ul>
						</div>
						<span class="badge bg-secondary align-item-right">{{this.qty}}</span>
					</ul>
				</ul>	
				{{/each}}

			</div>
		</div>

		<div class="row margin-top-item">
			<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
				<h5>Total: ${{totalPrice}} </h5>
			</div>
		</div>
		<hr>
		<form method="POST" action="/shopping-cart/store-bill">
		   <input type="hidden" class="form-control" id="inputAddress2" name="total" value="{{totalPrice}}">
			<div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">ID</label>
                <input type="text" class="form-control" id="inputAddress2" placeholder="HDxxx" name="ID">
        	</div>
			<div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Salesman</label>
                <select class="form-select" aria-label="Default select example" name="salesman">

                    {{#each staff}}
                    <option>{{this.name}}</option>
					{{/each}}
                                           
                </select>
            </div>
			<div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Department</label>
                <select class="form-select" aria-label="Default select example" name="department">

                    {{#each depart}}
                    <option>{{this.department}}</option>
                    {{/each}}
                                           
                </select>
            </div>
			<div class="row">
				<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
					<button type="submit" class="btn btn-success">Save Bill</button>
				</div>
			</div>
		</form>
		{{ else}}
		<div class="row margin-top-item">
			<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
				<h2>No items in Cart</h2>
			</div>
		</div>
		{{/if}}

	</div>
</section>

</body>
</html>

		