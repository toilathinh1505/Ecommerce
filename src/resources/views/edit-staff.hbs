
    <div class="section-top-border">
		<h3 class="mb-30 set-color-font">Edit staff</h3>
		<div class="progress-table-wrap">
			<div class="progress-table padding-form-add">
                <form method="POST" action="/admin/manage-staff/{{staff._id}}?_method=PUT">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">ID</label>
                        <input type="text" class="form-control" value="{{staff.ID}}" placeholder="NVxxx" id="ID" name="ID">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" value="{{staff.name}}" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Shift</label>
                        <select class="form-select" aria-label="Default select example" name="shift">
                            <option selected>Morning</option>
                            <option value="1">Afternoon</option>
                            <option value="2">Evening</option>                           
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Department</label>
                        <select class="form-select" aria-label="Default select example" name="depart">

                            {{#each depart}}
                            <option>{{this.department}}</option>
                            {{/each}}
                                           
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Basic Salary</label>
                        <input type="text" class="form-control" id="salary" value="{{staff.salary}}" name="salary">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="phone" value="{{staff.phone}}" name="phone">
                    </div>
                     <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Gender</label>
                        <select class="form-select" aria-label="Default select example" name="gender">
                            <option>Male</option>
                            <option>Female</option>             
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Birthday</label>
                        <input type="text" class="form-control" id="birthday" value="{{staff.birthday}}" name="birthday">
                    </div>
                    
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" value="{{staff.address}}" name="address">
                    </div>          
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
			</div>
		</div>
	</div>		


